---
import experienceData from "../Data/experience.json";
const { experience } = experienceData;
---

<div class="card bg-base-200 shadow-xl mx-24 max-lg:mx-4 p-2">
  <div class="card-body">
    <h2 class="card-title text-4xl font-bold mb-5">Work Experience</h2>
    {
      experience.map((exp) => (
        <>
          <div class="flex items-center gap-x-3">
            <div class="avatar max-lg:hidden">
              <div class="w-20 h-20 rounded-xl">
                <img src={`/logos/${exp.icon}.png`} alt={exp.companyName} />
              </div>
            </div>
            <div>
              <h1 class="text-2xl font-bold">{exp.jobTitle}</h1>
              <p class="text-lg">{exp.companyName}</p>
              <p class="text-lg">{exp.date}</p>
            </div>
          </div>
          <article class="prose text-xl max-lg:text-base max-w-4xl">
          <ul>
            {exp.description.map((bullet, index) => (
              <li>{bullet}</li>
            ))}
          </ul>
        </article>
          <div class="divider" />
        </>
      ))
    }
  </div>
</div>
